{% extends 'base.html.twig' %}

{% block title %}Films index{% endblock %}

{% block body %}
    <h1 class="text-center p-3">Tous les films</h1>
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container d-flex flex-wrap justify-content-around my-5 ">
        {% for film in films %}
            <div class="card col-3" style="width: 18rem;">
                <img src=" {{film.affiche}} " class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ film.titre }}</h5>
                    <a href="{{ path('films_edit', {'id': film.id}) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path('films_show', {'id': film.id}) }}" class="btn btn-primary">Détails</a>
                </div>
            </div>
        {% endfor %}
    </div>
    <a href="{{ path('films_new') }}" class="btn btn-primary">Créer un nouveau Film</a>

{% endblock %}
